<UserControl x:Class="ControlPanel.ControlPanelWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Properties="clr-namespace:ControlPanel.Properties"
             Background="#FF00BBE2"
             MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Name="NativeItem"
                      Click="NativeItem_Click"
                      Header="{x:Static Properties:Resources.Text_LaunchNative}" />
            <Separator />
            <MenuItem Header="{x:Static Properties:Resources.WidgetInfo}" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <Image Width="100"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="/ControlPanel;component/Images/settings_icon.png" />
        <TextBlock Margin="10,0,0,10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontSize="14"
                   Foreground="White"
                   Text="Control Panel" />
    </Grid>
</UserControl>