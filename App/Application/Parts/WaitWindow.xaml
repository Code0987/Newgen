<Window x:Class="Newgen.WaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True"
        Left="0"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Top="0"
        Topmost="True"
        WindowStyle="None">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Offset="0" Color="#C8000000" />
            <GradientStop Offset="1" Color="Black" />
        </RadialGradientBrush>
    </Window.Background>
    <Window.Resources>
        <Storyboard x:Key="Stop">
            <DoubleAnimation BeginTime="00:00:00"
                             Duration="00:00:00.5"
                             RepeatBehavior="1x"
                             Storyboard.TargetProperty="Opacity"
                             To="0" />
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.5"
                                     From="0"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <Ellipse Name="Ellipse_Cir"
                 Width="200"
                 Height="200"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Stretch="Fill"
                 StrokeDashArray="100 100"
                 StrokeDashCap="Round"
                 StrokeDashOffset="2"
                 StrokeEndLineCap="Round"
                 StrokeLineJoin="Round"
                 StrokeMiterLimit="10"
                 StrokeStartLineCap="Round"
                 StrokeThickness="2">
            <Ellipse.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#0A00BFFF" />
                    <GradientStop Offset="1" Color="#0A32849D" />
                </LinearGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="DeepSkyBlue" />
                    <GradientStop Offset="1" Color="#FF32849D" />
                </LinearGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.RenderTransformOrigin>0.5,0.5</Ellipse.RenderTransformOrigin>
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="0" />
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Resources>
                <Storyboard x:Key="Start" Timeline.DesiredFrameRate="30">
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:02"
                                     RepeatBehavior="Forever"
                                     Storyboard.TargetProperty="RenderTransform.Children[0].Angle"
                                     To="360" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:01"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleX"
                                     To="1.5" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:01"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleY"
                                     To="1.5" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:01"
                                     From="0"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1" />
                </Storyboard>
                <Storyboard x:Key="Stop" Timeline.DesiredFrameRate="30">
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[0].Angle"
                                     To="0" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleX"
                                     To="1" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleY"
                                     To="1" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0" />
                </Storyboard>
            </Ellipse.Resources>
        </Ellipse>

        <Ellipse Name="Ellipse_Cir2"
                 Width="320"
                 Height="320"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Stretch="Fill"
                 StrokeDashArray="100 100"
                 StrokeDashCap="Round"
                 StrokeDashOffset="2"
                 StrokeEndLineCap="Round"
                 StrokeLineJoin="Round"
                 StrokeStartLineCap="Round"
                 StrokeThickness="2">
            <Ellipse.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#0AFFA500" />
                    <GradientStop Offset="1" Color="#0ABE5C31" />
                </LinearGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="Orange" />
                    <GradientStop Offset="1" Color="#FFBE5C31" />
                </LinearGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.RenderTransformOrigin>0.5,0.5</Ellipse.RenderTransformOrigin>
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="0" />
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Resources>
                <Storyboard x:Key="Start" Timeline.DesiredFrameRate="30">
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:03"
                                     RepeatBehavior="Forever"
                                     Storyboard.TargetProperty="RenderTransform.Children[0].Angle"
                                     To="-360" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:01"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleX"
                                     To="1.5" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:01"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleY"
                                     To="1.5" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     From="0"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1" />
                </Storyboard>
                <Storyboard x:Key="Stop" Timeline.DesiredFrameRate="30">
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[0].Angle"
                                     To="0" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleX"
                                     To="1" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleY"
                                     To="1" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0" />
                </Storyboard>
            </Ellipse.Resources>
        </Ellipse>

        <Ellipse Name="Ellipse_Cir3"
                 Width="440"
                 Height="440"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Stretch="Fill"
                 StrokeDashArray="100 100"
                 StrokeDashCap="Round"
                 StrokeDashOffset="2"
                 StrokeEndLineCap="Round"
                 StrokeLineJoin="Round"
                 StrokeStartLineCap="Round"
                 StrokeThickness="2">
            <Ellipse.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#0AADFF2F" />
                    <GradientStop Offset="1" Color="#0A46BE31" />
                </LinearGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="GreenYellow" />
                    <GradientStop Offset="1" Color="#FF46BE31" />
                </LinearGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.RenderTransformOrigin>0.5,0.5</Ellipse.RenderTransformOrigin>
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="0" />
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Resources>
                <Storyboard x:Key="Start" Timeline.DesiredFrameRate="30">
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:04"
                                     RepeatBehavior="Forever"
                                     Storyboard.TargetProperty="RenderTransform.Children[0].Angle"
                                     To="360" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:01"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleX"
                                     To="1.5" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:01"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleY"
                                     To="1.5" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     From="0"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1" />
                </Storyboard>
                <Storyboard x:Key="Stop" Timeline.DesiredFrameRate="30">
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[0].Angle"
                                     To="0" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleX"
                                     To="1" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     Storyboard.TargetProperty="RenderTransform.Children[1].ScaleY"
                                     To="1" />
                    <DoubleAnimation BeginTime="00:00:00"
                                     Duration="00:00:00.500"
                                     RepeatBehavior="1x"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0" />
                </Storyboard>
            </Ellipse.Resources>
        </Ellipse>

        <TextBlock Name="Text"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontFamily="Trebuchet MS"
                   FontSize="32"
                   Foreground="#64FFFFFF"
                   Text="..."
                   TextAlignment="Center" />
    </Grid>
</Window>