<app:ToolbarWindow x:Class="Newgen.ThumbnailsBar"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:app="clr-namespace:Newgen"
                   Width="185"
                   MouseLeave="OnMouseLeave"
                   PreviewMouseLeftButtonUp="OnPreviewMouseLeftButtonUp"
                   SourceInitialized="OnSourceInitialized">
    <app:DragScrollViewer DragEverywhere="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
        <StackPanel Name="ThumbsList"
                    MinWidth="180"
                    MinHeight="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#00000000"
                    MouseLeftButtonUp="ThumbsListMouseLeftButtonUp" />
    </app:DragScrollViewer>
</app:ToolbarWindow>