<UserControl x:Class="Newgen.AppLink.AppLinkPackageSettingsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lib="clr-namespace:Newgen"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:r="clr-namespace:Newgen.Resources"
             Loaded="OnLoaded"
             d:DesignHeight="360"
             d:DesignWidth="320"
             mc:Ignorable="d">
    <StackPanel>
        <TextBox Name="TitleTextBox"
                 Margin="0,0"
                 TextChanged="TitleTextBox_TextChanged"
                 ToolTip="Title" />
        <TextBox Name="ArgsTextBox"
                 Margin="0,5,0,0"
                 TextChanged="ArgsTextBox_TextChanged"
                 ToolTip="Commandline arguments" />
        <Button Margin="0,5,0,0"
                HorizontalAlignment="Stretch"
                Click="ChangeIconButton_Click"
                Content="Change Icon" />
    </StackPanel>
</UserControl>