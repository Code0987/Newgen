<Border x:Class="CPUMonitorPackage.Tile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:lib="clr-namespace:CPUMonitorPackage"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.codeplex.com"
        xmlns:p="clr-namespace:CPUMonitorPackage.Properties"
        Margin="-1"
        Background="#E5FFFFFF"
        BorderBrush="#A3252525"
        BorderThickness="1"
        d:DesignHeight="180"
        d:DesignWidth="270"
        mc:Ignorable="d">
    <Grid ClipToBounds="True">
        <Grid.Background>
            <VisualBrush TileMode="Tile"
                         Viewbox="0,0,5,5"
                         ViewboxUnits="Absolute"
                         Viewport="0,0,5,5"
                         ViewportUnits="Absolute">
                <VisualBrush.Visual>
                    <Canvas>
                        <Line Stroke="#12ACACAC"
                              X1="0"
                              X2="0"
                              Y1="0"
                              Y2="5" />
                        <Line Stroke="#12ACACAC"
                              X1="0"
                              X2="5"
                              Y1="0"
                              Y2="0" />
                    </Canvas>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>
        <oxy:PlotView x:Name="MainPlotView"
                      Background="Transparent"
                      Model="{Binding PlotModel}"
                      RenderOptions.BitmapScalingMode="NearestNeighbor"
                      RenderOptions.ClearTypeHint="Auto"
                      RenderOptions.EdgeMode="Aliased" />
    </Grid>
</Border>