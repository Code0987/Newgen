<Border x:Class="BackgroundPackage.Tile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:lib="clr-namespace:BackgroundPackage"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:BackgroundPackage.Properties"
        Margin="-1"
        Background="#FF0EABFD"
        BorderBrush="#A3252525"
        BorderThickness="1"
        MouseLeftButtonUp="OnMouseLeftButtonUp"
        d:DesignHeight="90"
        d:DesignWidth="90"
        mc:Ignorable="d">
    <Border.ContextMenu>
        <ContextMenu>
            <MenuItem>
                <MenuItem.Header>
                    <lib:SettingsEditorControl x:Name="SettingsEditor" />
                </MenuItem.Header>
            </MenuItem>
        </ContextMenu>
    </Border.ContextMenu>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/Logo.png" Stretch="Uniform"/>
        </Grid.Background>
    </Grid>
</Border>