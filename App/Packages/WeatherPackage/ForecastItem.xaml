<UserControl x:Class="WeatherPackage.ForecastItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Margin="15,0"
             Background="#33FFD100"
             FontWeight="Light">
    <StackPanel>
        <TextBlock Name="Day"
                   Margin="0,20,0,0"
                   HorizontalAlignment="Center"
                   Text="Day"
                   TextBlock.FontSize="26"
                   TextTrimming="CharacterEllipsis" />
        <Image Name="WeatherIcon" Height="128" Source="Resources/weather_1.png" />
        <TextBlock Name="Temperature"
                   Margin="15,0,15,0"
                   Text="0°"
                   TextBlock.FontSize="36" />
        <TextBlock Name="LowTemperature"
                   Margin="15,0,15,0"
                   Text="0° Low"
                   TextBlock.FontSize="18" />
        <TextBlock Name="Sky"
                   Margin="15,15,15,10"
                   Text="Sky"
                   TextBlock.FontSize="24"
                   TextTrimming="CharacterEllipsis" />
        <TextBlock Name="Precipitation"
                   Margin="15,-6,15,50"
                   Text="0% Chances of Rain"
                   TextBlock.FontSize="18"
                   TextTrimming="CharacterEllipsis" />
    </StackPanel>
</UserControl>