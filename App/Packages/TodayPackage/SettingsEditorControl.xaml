<Grid x:Class="TodayPackage.SettingsEditorControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lib="clr-namespace:TodayPackage"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:p="clr-namespace:TodayPackage.Properties"
      d:DesignHeight="150"
      d:DesignWidth="300"
      mc:Ignorable="d">
    <StackPanel Margin="0,5">
        <Slider AutoToolTipPlacement="TopLeft"
                IsMoveToPointEnabled="True"
                IsSelectionRangeEnabled="True"
                LargeChange="120000"
                Maximum="3600000"
                Minimum="90000"
                SmallChange="60000"
                ToolTip="{x:Static p:Resources.ContentChangeInterval}"
                Value="{Binding ListInterval}" />
        <Slider AutoToolTipPlacement="TopLeft"
                IsMoveToPointEnabled="True"
                IsSelectionRangeEnabled="True"
                LargeChange="120000"
                Maximum="7200000"
                Minimum="300000"
                SmallChange="60000"
                ToolTip="{x:Static p:Resources.ContentUpdateInterval}"
                Value="{Binding FeedsInterval}" />
    </StackPanel>
</Grid>
