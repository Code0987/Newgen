<UserControl x:Class="Video.VideoWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Properties="clr-namespace:Video.Properties"
             Background="#FFD54B28"
             MouseLeftButtonUp="UserControlMouseLeftButtonUp">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="{x:Static Properties:Resources.AddLookupFolder}"
                      Click="MenuItem_AddLookupFolder_Click" />
            <MenuItem Header="{x:Static Properties:Resources.ClearLookupFolders}"
                      Click="MenuItem_ClearLookupFolders_Click" />
            <Separator />
            <MenuItem Header="{x:Static Properties:Resources.WidgetInfo}" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <Image Width="65" Source="/Video;component/Resources/video_logo.png" />
        <TextBlock Margin="10,0,0,10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontSize="14"
                   Foreground="White"
                   Text="Video" />
    </Grid>
</UserControl>