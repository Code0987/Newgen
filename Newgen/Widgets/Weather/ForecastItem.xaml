<UserControl x:Class="Weather.ForecastItem" Background="#33FFD100" FontWeight="Light" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="15,0">
    <StackPanel>
        <TextBlock Name="Day" Text="Day" TextBlock.FontSize="26" Margin="0,20,0,0" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" />
        <Image Name="WeatherIcon" Source="Resources/weather_1.png" Height="128" />
        <TextBlock Name="Temperature" Text="0°" TextBlock.FontSize="36" Margin="15,0,15,0" />
        <TextBlock Name="LowTemperature" Text="0° Low" TextBlock.FontSize="18" Margin="15,0,15,0" />
        <TextBlock Name="Sky" Text="Sky" TextBlock.FontSize="24" Margin="15,15,15,10" TextTrimming="CharacterEllipsis" />
        <TextBlock Name="Precipitation" Text="0% Chances of Rain" TextBlock.FontSize="18" Margin="15,-6,15,50" TextTrimming="CharacterEllipsis" />        
    </StackPanel>
</UserControl>