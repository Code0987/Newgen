<UserControl x:Class="Quotes.Tile" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:app="clr-namespace:Quotes" Background="#FF0EABFD" d:DesignHeight="180" d:DesignWidth="360" mc:Ignorable="d">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock x:Name="TextBlock_Quote" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="19" Foreground="White" Text="..." TextWrapping="Wrap" />
            <Separator Background="#FFD8D8D8" Opacity="0.15" />
            <TextBlock x:Name="TextBlock_Author" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="14" Foreground="#FFD8D8D8" Text="" />
        </StackPanel>
        <TextBlock Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="14" Foreground="White" Text="{x:Static app:Resources.Text_Quotes}" />
    </Grid>
</UserControl>