<Border x:Class="InternetPackage.Tile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:InternetPackage.Properties"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Margin="-1"
        Background="#FF00B5DF"
        BorderBrush="#A3252525"
        BorderThickness="1"
        MouseLeftButtonUp="UserControlMouseLeftButtonUp"
        d:DesignHeight="180"
        d:DesignWidth="180"
        mc:Ignorable="d">
    <Border.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="CMRM_IE" Click="CMRM_IE_Click" Header="{x:Static Properties:Resources.RM_IE}">
                <MenuItem.Icon>
                    <Image Width="18" Height="18" Source="/Internet;component/Resources/icon.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem x:Name="CMRM_WK" Click="CMRM_WK_Click" Header="{x:Static Properties:Resources.RM_WK}">
                <MenuItem.Icon>
                    <Image Width="18" Height="18" Source="/Internet;component/Resources/Webkit.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Border.ContextMenu>
    <Grid>
        <Image HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="/Internet;component/Resources/internet.png"
               Stretch="Uniform" />
        <TextBlock Margin="10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="{StaticResource ContentFontSizeSmall}"
                   Foreground="White"
                   Text="{x:Static Properties:Resources.Internet}" />
    </Grid>
</Border>