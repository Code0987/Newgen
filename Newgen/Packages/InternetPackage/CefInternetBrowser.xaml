<api:HubWindow x:Class="InternetPackage.CefInternetBrowser"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:Properties="clr-namespace:InternetPackage.Properties"
               xmlns:api="clr-namespace:Newgen;assembly=Newgen.Api"
               xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               Background="Black"
               Foreground="White"
               PreviewKeyUp="OnPreviewKeyUp"
               WindowStyle="None"
               d:DesignHeight="600"
               d:DesignWidth="800"
               mc:Ignorable="d">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Name="SearchPanel"
              Grid.Row="0"
              Margin="0"
              Background="White">
            <cefSharp:WebView x:Name="WebView" />
        </Grid>
        <Grid Name="SearchControls" Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Name="BackButton"
                   Grid.Column="0"
                   Width="30"
                   Margin="5"
                   MouseLeftButtonUp="OnBackButtonMouseLeftButtonUp"
                   Source="/Internet;component/Resources/back.png" />
            <ProgressBar Grid.Column="1"
                         Height="7"
                         Margin="0"
                         VerticalAlignment="Bottom"
                         Background="Black"
                         BorderThickness="0"
                         IsIndeterminate="{Binding WebBrowser.IsLoading}" />
            <TextBox Name="URLBox"
                     Grid.Column="1"
                     Margin="5"
                     VerticalAlignment="Top"
                     VerticalContentAlignment="Center"
                     Background="Transparent"
                     BorderBrush="{x:Null}"
                     BorderThickness="0"
                     FontSize="24"
                     Foreground="White"
                     PreviewKeyDown="OnURLBoxPreviewKeyDown"
                     SelectionBrush="#FF939393"
                     Text="http://" />
            <Image Name="RefButton"
                   Grid.Column="2"
                   Width="30"
                   Margin="5"
                   MouseLeftButtonUp="OnRefButtonMouseLeftButtonUp"
                   Source="/Internet;component/Resources/refresh.png" />
            <Image Name="HomeButton"
                   Grid.Column="3"
                   Width="30"
                   Margin="5"
                   MouseLeftButtonUp="OnHomeButtonMouseLeftButtonUp"
                   Source="/Internet;component/Resources/home.png" />
            <Image Name="CloseButton"
                   Grid.Column="4"
                   Width="30"
                   Margin="5"
                   MouseDown="OnCloseButtonMouseDown"
                   Source="/Internet;component/Resources/close.png" />
            <Image Name="FwButton"
                   Grid.Column="5"
                   Width="30"
                   Margin="5"
                   MouseLeftButtonUp="OnFwButtonMouseLeftButtonUp"
                   Source="/Internet;component/Resources/forward.png" />
        </Grid>
    </Grid>
</api:HubWindow>