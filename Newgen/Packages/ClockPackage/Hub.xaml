<UserControl x:Class="ClockPackage.Hub"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControlLoaded"
             MouseLeftButtonDown="UserControlMouseLeftButtonDown"
             MouseLeftButtonUp="UserControlMouseLeftButtonUp"
             MouseMove="UserControlMouseMove"
             Unloaded="UserControlUnloaded">
    <UserControl.RenderTransform>
        <TranslateTransform x:Name="Translate" />
    </UserControl.RenderTransform>
    <UserControl.Resources>
        <Storyboard x:Key="UnlockAnim" Completed="UnlockAnimCompleted">
            <DoubleAnimation AccelerationRatio="0.3"
                             Duration="0:0:0.35"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y" />
        </Storyboard>
        <Storyboard x:Key="MoveBackAnim"
                    Completed="MoveBackAnimCompleted"
                    FillBehavior="Stop">
            <DoubleAnimation AccelerationRatio="0.6"
                             Duration="0:0:0.3"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y"
                             To="0" />
            <DoubleAnimation AccelerationRatio="0.3"
                             BeginTime="0:0:0"
                             DecelerationRatio="0.7"
                             Duration="0:0:0.14"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y"
                             To="0" />
            <DoubleAnimation AccelerationRatio="0.3"
                             BeginTime="0:0:0.14"
                             DecelerationRatio="0.7"
                             Duration="0:0:0.12"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y"
                             To="-16" />
            <DoubleAnimation AccelerationRatio="0.3"
                             BeginTime="0:0:0.26"
                             DecelerationRatio="0.7"
                             Duration="0:0:0.10"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y"
                             To="0" />
        </Storyboard>
        <Storyboard x:Key="JumpAnim"
                    Completed="JumpAnimCompleted"
                    FillBehavior="Stop">
            <DoubleAnimation AccelerationRatio="0.3"
                             DecelerationRatio="0.7"
                             Duration="0:0:0.18"
                             From="0"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y"
                             To="-30" />
            <DoubleAnimation AccelerationRatio="0.3"
                             BeginTime="0:0:0.18"
                             DecelerationRatio="0.7"
                             Duration="0:0:0.14"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y"
                             To="0" />
            <DoubleAnimation AccelerationRatio="0.3"
                             BeginTime="0:0:0.32"
                             DecelerationRatio="0.7"
                             Duration="0:0:0.12"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y"
                             To="-10" />
            <DoubleAnimation AccelerationRatio="0.3"
                             BeginTime="0:0:0.44"
                             DecelerationRatio="0.7"
                             Duration="0:0:0.10"
                             Storyboard.TargetName="Translate"
                             Storyboard.TargetProperty="Y"
                             To="0" />
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Image Name="LockScreenBg" Stretch="UniformToFill" />
        <StackPanel Margin="80,0,0,80"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom">
            <TextBlock Name="Day"
                       FontSize="68"
                       FontWeight="Light"
                       Text="Wednesday" Foreground="White" />
            <TextBlock Name="Month"
                       Margin="0,-20,0,-40"
                       FontSize="68"
                       FontWeight="Light"
                       Text="June 01" Foreground="White" />
            <TextBlock Name="Time"
                       FontSize="176"
                       FontWeight="Light"
                       Text="0:00" Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>