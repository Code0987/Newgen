<UserControl x:Class="Newgen.Controls.CommentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#19000000" Margin="0,3,0,3">
    <DockPanel>
        <Image Name="Avatar" DockPanel.Dock="Left" Width="50" Height="50" Margin="5" VerticalAlignment="Top"/>
        <TextBlock Name="Date" DockPanel.Dock="Bottom" Margin="0,3,0,3" Foreground="#FF898989" FontSize="14" Text="Text"/>
        <TextBlock FontSize="14" TextWrapping="Wrap" Margin="0,0,0,0">
            <Run Name="Username" Foreground="#FF525252" Text="Text"/>
            <Run Name="Message" Foreground="#FF898989" Text="Text"/>
        </TextBlock>
    </DockPanel>
</UserControl>