<Controls:ToolbarWindow x:Class="Newgen.Windows.ThumbnailsBar"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:Controls="clr-namespace:Newgen.Controls"
                        Width="185"
                        SourceInitialized="Window_SourceInitialized"
                        MouseLeave="Window_MouseLeave"
                        PreviewMouseLeftButtonUp="Window_PreviewMouseLeftButtonUp">
    <Controls:DragScrollViewer DragEverywhere="True"
                               HorizontalScrollBarVisibility="Disabled"
                               VerticalScrollBarVisibility="Hidden">
        <StackPanel Name="ThumbsList"
                    MinWidth="180"
                    MinHeight="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#00000000"
                    MouseLeftButtonUp="ThumbsListMouseLeftButtonUp" />
    </Controls:DragScrollViewer>
</Controls:ToolbarWindow>