<Window x:Class="Newgen.Windows.AddressBarWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="Window" Height="60" KeyDown="WindowKeyDown" Loaded="WindowLoaded" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStyle="None">
    <Window.Resources>
        <Storyboard x:Key="OpenAnim" BeginTime="0:0:0.05">
            <DoubleAnimation Storyboard.TargetName="Window" Storyboard.TargetProperty="Top" AccelerationRatio="0.7" DecelerationRatio="0.3" Duration="0:0:0.2" From="-60" To="0" />
        </Storyboard>
        <Storyboard x:Key="CloseAnim" BeginTime="0:0:0.1" Completed="AddressBarCloseAnimCompleted">
            <DoubleAnimation Storyboard.TargetName="Window" Storyboard.TargetProperty="Top" AccelerationRatio="0.7" DecelerationRatio="0.3" Duration="0:0:0.2" From="0" To="-60" />
        </Storyboard>
    </Window.Resources>
    <Grid>
        <TextBox Height="34" Margin="100,0,100,0" Background="#c5c6c5" FontSize="16" KeyDown="AddressBoxKeyDown" Name="AddressBox" Text="http://" VerticalAlignment="Center" VerticalContentAlignment="Center" />
    </Grid>
</Window>