<UserControl x:Class="Newgen.Controls.TilesToolbarItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="5,10,5,0" MouseLeave="UserControlMouseLeave" MouseLeftButtonDown="UserControlMouseLeftButtonDown" MouseLeftButtonUp="UserControlMouseLeftButtonUp" RenderTransformOrigin="0.5,0.5">
    <UIElement.RenderTransform>
        <TranslateTransform x:Name="Translate" />
    </UIElement.RenderTransform>
    <DockPanel>
        <TextBlock DockPanel.Dock="Bottom" Margin="5,5,5,0" Width="52" FontSize="12.5" Foreground="White" HorizontalAlignment="Center" Name="TitleTextBlock" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />
